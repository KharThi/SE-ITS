<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <servlet-class>accessgoogle.servlet.LoginGoogleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateEventController</servlet-name>
        <servlet-class>controllers.admin.CreateEventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FirstController</servlet-name>
        <servlet-class>controllers.guest.FirstController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadEventCategoryController</servlet-name>
        <servlet-class>controllers.admin.LoadEventCategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadEventPageController</servlet-name>
        <servlet-class>controllers.admin.LoadEventPageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteEventController</servlet-name>
        <servlet-class>controllers.admin.DeleteEventController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginGoogleServlet</servlet-name>
        <url-pattern>/LoginGoogleServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateEventController</servlet-name>
        <url-pattern>/CreateEventController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FirstController</servlet-name>
        <url-pattern>/FirstController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadEventCategoryController</servlet-name>
        <url-pattern>/LoadEventCategoryController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/LogoutController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadEventPageController</servlet-name>
        <url-pattern>/LoadEventPageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteEventController</servlet-name>
        <url-pattern>/DeleteEventController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <!--<welcome-file>./user/home.jsp</welcome-file>-->
        <!--<welcome-file>./admin/createEvent.jsp</welcome-file>-->
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Resource reference to javax.sql.Connection</description>
        <res-ref-name>DBCon</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
